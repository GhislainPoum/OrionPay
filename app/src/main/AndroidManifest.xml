<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.poum.orionpay">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_nam"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".VerificationActivity" />
        <activity
            android:name=".PhoneActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SmsActivity"
            android:label="@string/title_activity_sms"
            android:parentActivityName=".GmailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.GmailActivity" />
        </activity>
        <activity
            android:name=".PaymentMode.OptionPayActivity"
            android:label="@string/title_activity_option_pay"
            android:parentActivityName=".GmailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.GmailActivity" />
        </activity>
        <activity
            android:name=".GmailActivity"
            android:label="@string/title_activity_gmail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".PaymentMode.MomoActivity"
            android:label="@string/title_activity_momo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".PaymentMode.OrangeActivity"
            android:label="@string/title_activity_orange"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="@string/menu_account"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".AppAboutActivity"
            android:label="@string/title_activity_app_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".AppSettingActivity"
            android:label="@string/title_activity_app_setting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".PaymentAnalysisActivity"
            android:label="@string/title_activity_payment_analysis"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".PaymentTransactionActivity"
            android:label="@string/title_activity_transaction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.poum.orionpay.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>